@page "/dictionares"

<div class="row col-12">
    <button class="btn btn-outline-dark" style="width: 10rem; margin: 0.5rem;" @onclick="(() => PageChange(1))"> Suppilers </button>
    <button class="btn btn-outline-dark" style="width: 10rem; margin: 0.5rem;" @onclick="(() => PageChange(2))"> Equipment </button>
    <button class="btn btn-outline-dark" style="width: 10rem; margin: 0.5rem;" @onclick="(() => PageChange(3))"> Internet </button>
    <button class="btn btn-outline-dark" style="width: 10rem; margin: 0.5rem;" @onclick="(() => PageChange(4))"> Invoices </button>
</div>

@if(pageNumber == 1){
    <DictionarySuppilers @rendermode="RenderMode.InteractiveServer"></DictionarySuppilers>
} else if (pageNumber == 2) {
    <DictionaryEquipment @rendermode="RenderMode.InteractiveServer"></DictionaryEquipment>
} else if (pageNumber == 3) {
    <DictionaryInternet @rendermode="RenderMode.InteractiveServer"></DictionaryInternet>
} else if (pageNumber == 4) {
    <DictionaryInvoices @rendermode="RenderMode.InteractiveServer"></DictionaryInvoices>
} else {

}

@code {
    int pageNumber = 0;

    public void PageChange(int pageNumber){
        this.pageNumber = pageNumber;
    }
}
